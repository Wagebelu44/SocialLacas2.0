
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    @{
        Html.RenderPartial("_VisitorTopMenu");
    }
</div>

<div class="not-authenticate guest">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 centered">
                <div class="well">
                    <div class="alert alert-danger hidden"></div>
                 
                    <form action="" method="post">
                        <div class="form-group">
                            <label style="display:none;" for="username" class="control-label">Username</label>
                            <input type="text" class="form-control" id="txtusername" value="" name="RegistrationForm[login]" placeholder="Username" required >
                        </div>
                        <div class="form-group">
                            <label style="display:none;" for="email" class="control-label">Email</label>
                            <input type="email" class="form-control" id="txtemail" value="" name="RegistrationForm[email]" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <label style="display:none;" for="password" class="control-label">Password</label>
                            <input type="password" class="form-control" id="txtpassword" name="RegistrationForm[password]" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <label style="display:none;" for="confirm" class="control-label">Confirm password</label>
                            <input type="password" class="form-control" id="txtconfirm" name="RegistrationForm[password_again]" placeholder="Confirm password" required>
                        </div>
                        <div class="g-recaptcha form-group" data-sitekey="6LeQyxkUAAAAACZsRNUpGI-5rw7ifdLgP0mUyE4O" data-theme="dark" >
                        </div>
                        <!--   <div class="g-recaptcha form-group" data-sitekey="6LeQyxkUAAAAACZsRNUpGI-5rw7ifdLgP0mUyE4O">
    </div>-->
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="chkCaptcha" class="terms-accept-checkbox" name="RegistrationForm[termsofservice]"> I have read and agreed with <a href="/visitor/terms" target="_blank">Terms of Service</a>
                                </label>
                            </div>
                        </div>
                        <input id="submitBtn" type="button" onclick="SaveUser();" class="btn btn-primary" value="Sign Up" />
                        @*<button type="submit" onclick="SaveUser();" class="btn btn-primary">Sign up</button>*@
                        @*<span class="pull-right pull-right-middle">Already have an account? <a href="~/Visitor/SignIn">Sign in</a></span>*@
                    </form>
                </div>
            </div>
        </div>
    </div>

     <script src='https://www.google.com/recaptcha/api.js?hl=en'></script>

</div>
@section Scripts
{

    <script src="@Url.Content("~/Custom/JS/Signup.js")"></script>
}


